<table id="datatable-responsive" class="table table-hover table-bordered dt-responsive nowrap" cellspacing="0"
       width="100%">

    <thead>
    <tr>
        <th>Titre</th>
        {#<th>Contenu</th>#}
        <th>Image</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {% for ecran in ecrans %}

        <tr id="{{ ecran.id }}">
            <td>{{ ecran.titre }}</td>
            {#<td>#}
                {#{{ ecran.contenu|raw }}#}
            {#</td>#}
            <td>  {% if(ecran.image !=null) %}     <img style="width: 180px;height: 80px;" src="{{ app.request.basepath() }}/{{ ecran.getWebPath }}" /> {% else %} - {% endif %}</td>

            <td class="btn-group-action">
                <a class="active-row" id="{{ ecran.id }}" data-toggle="tooltip" data-placement="top"
                   message="d'activation de cet écran ?"
                   title="{% if ecran.activated %}Désactiver{% else %}Activer {% endif %}"
                   data-path="{{ path('ecran_active') }}" data-basepath="{{ app.request.basepath() }}">
                    {% if ecran.activated %}
                        <button class="btn btn-success"><i class="fa fa-check"></i></button>
                    {% else %}
                        <button class="btn btn-icon waves-effect waves-light btn-danger"><i
                                    class="fa fa-remove"></i></button>
                    {% endif %}
                </a>

                <a class="opacity"  href="{{ path('ecran_visualise', { 'id': ecran.id }) }}"
                   data-toggle="tooltip" data-placement="top" title="Visualiser">
                    <button class="btn btn-warning"><i class="fa fa-eye"></i></button>
                </a>

                <a class="opacity"
                   href="{{ path('ecran_edit', { 'id': ecran.id }) }}"
                   data-toggle="tooltip" data-placement="top" title="Modifier">
                    <button class="btn btn-primary"><i class="fa fa-pencil"></i></button>
                </a>

                {# Button supprimer #}
                <a class="remove-row" id="{{ ecran.id }}" data-toggle="tooltip" message="cet écran ?"
                   data-placement="top" title="Supprimer"
                   data-path="{{ path('ecran_delete') }}" data-basepath="{{ app.request.basepath() }}">
                    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
                </a>

            </td>
        </tr>

    {% endfor %}
    </tbody>
</table>